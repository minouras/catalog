<button
  aria-label="ナビ開閉ボタン"
  class="hamburger hover:text-zinc-100 min_md:hidden"
  id="js-gnav-trg"
>
  <div class="hamburger__container">
    <span class="hamburger__item"></span><span class="hamburger__item"></span><span
      class="hamburger__item"></span>
  </div>
</button>

<style>
  /* ハンバーガーボタン */
  .hamburger {
    display: flex;
    position: relative;
    justify-content: center;
    align-items: center;
    z-index: 200;
    cursor: pointer;
    background-color: transparent;
    padding: 0;
    width: 3.7rem;
    height: 3.7rem;
  }
  @screen min_md {
    .hamburger {
      display: none;
    }
  }
  .hamburger__container {
    display: block;
    position: relative;
    margin: auto;
    width: 2.7rem;
    height: 2.3rem;
  }
  @screen min_md {
    .hamburger__container {
      width: 3rem;
      height: 2.5rem;
    }
  }
  .hamburger__item {
    display: block;
    position: absolute;
    left: 0;
    transition: all 0.5s ease-out;
    margin: auto;
    background-color: white;
    width: 100%;
    height: 1px;
  }
  .hamburger__container > :nth-child(1) {
    top: 0;
  }
  .hamburger__container > :nth-child(2) {
    top: 0;
    bottom: 0;
    width: 100%;
  }
  .hamburger__container > :nth-child(3) {
    bottom: 0;
  }
  .hamburger.is-active .hamburger__container > :nth-child(1) {
    top: 48%;
    transform: rotate(45deg);
  }
  .hamburger.is-active .hamburger__container > :nth-child(2) {
    opacity: 0;
  }
  .hamburger.is-active .hamburger__container > :nth-child(3) {
    bottom: 47%;
    transform: rotate(-45deg);
  }
</style>
