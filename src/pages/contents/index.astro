---
import Layout from '@/layouts/Layout.astro';
import Section from '@/components/layout/Section.astro';
import Wrapper from '@/components/layout/Wrapper.astro';
import HeroAtInner from '@/components/base/HeroAtInner.astro';
import Sentence from '@/components/ui/Sentence.astro';
import NeonText from '@/components/ui/text/NeonText.astro';

/**
 * コンテンツ カード・ブロック等の表現
 * */
---

<Layout title="コンテンツ カード・ブロック">
  {
    /*-----------------------------
	# ヒーロー
	-----------------------------*/
  }
  <HeroAtInner>
    <span slot="title">コンテンツ</span>
    <span slot="desc">コンテンツが入るカードやブロックの表現</span>
  </HeroAtInner>

  {
    /*-----------------------------
	# ネオン系
	-----------------------------*/
  }
  <Section id="neon" css="bg-black">
    <Wrapper>
      <NeonText as="h1">
        <span class="text-2xl font-bold md:text-3xl">ネオンボーダー</span>
      </NeonText>
      <div class="mt-6 grid grid-cols-1 gap-x-[4%] gap-y-6 md:grid-cols-3 xl:grid-cols-4"></div>
    </Wrapper>
  </Section>
</Layout>
